<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home del Delivery</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/deliveryViews.css-1">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a class="nav-link" href="/delivery/home"><i class="fas fa-home"></i> Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/delivery/perfil"><i class="fas fa-user"></i> Mi Perfil</a></li>
                <li class="nav-item"><a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesi√≥n</a></li>
            </ul>
        </div>
    </nav>
    
    <div class="container mt-5">
        <h2 class="text-center mb-4"><i class="fas fa-shopping-bag"></i> Pedidos Asignados</h2>
        <% if (orders && orders.length > 0) { %>
            <div class="list-group">
                <% orders.forEach(order => { %>
                    <a href="/delivery/order/<%= order.id %>" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1"><i class="fas fa-receipt"></i> Pedido #<%= order.id %></h5>
                            <small><i class="fas fa-calendar-alt"></i> <%= order.createdAt.toLocaleDateString() %> <i class="fas fa-clock"></i> <%= order.createdAt.toLocaleTimeString() %></small>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <img src="/ImagesRepo/<%= order.business.logo %>" alt="Logo Comercio" class="business-logo mr-3">
                            <div>
                                <p class="mb-1"><i class="fas fa-store"></i> <%= order.business.business_name %></p>
                                <p class="mb-1"><i class="fas fa-dollar-sign"></i> Total: $<%= order.total.toFixed(2) %></p>
                                <p class="mb-1"><i class="fas fa-box-open"></i> Productos: <%= order.products ? order.products.length : 0 %></p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <span class="badge badge-pill badge-info"><i class="fas fa-info-circle"></i> Estado: <%= order.status %></span>
                        </div>
                    </a>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center"><i class="fas fa-exclamation-triangle"></i> No hay pedidos asignados.</p>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>