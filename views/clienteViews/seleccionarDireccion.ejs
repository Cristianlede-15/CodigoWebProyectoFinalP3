<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seleccionar Direcci贸n</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .order-summary {
            text-align: center;
        }

        .order-summary img {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            margin-bottom: 1rem;
            object-fit: cover;
        }

        .order-summary p {
            font-size: 1rem;
            color: #333;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/perfil">Mi perfil</a></li>
            <li><a href="/user/pedidos">Mis pedidos</a></li>
            <li><a href="/user/direcciones">Mis direcciones</a></li>
            <li><a href="/user/favoritos">Mis favoritos</a></li>
            <li><a href="/auth/logout">Cerrar Sesi贸n</a></li>
        </ul>
    </nav>

    <div class="container">
        <form action="/checkout" method="POST">
            <h3>Selecciona una direcci贸n de entrega:</h3>
            <% if (addresses && addresses.length > 0) { %>
                <% addresses.forEach(address => { %>
                    <div>
                        <input type="radio" name="address_id" value="<%= address.id %>" required>
                        <strong><%= address.name %></strong>: <%= address.description %>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No tienes direcciones guardadas. <a href="/user/direcciones/agregar">Agregar direcci贸n</a></p>
            <% } %>

            <!-- Resumen del pedido -->
            <div class="order-summary">
                <h3>Resumen del Pedido</h3>
                <% if (business) { %>
                    <img src="/ImagesRepo/<%= business.logo %>" alt="<%= business.business_name %>">
                    <p><strong>Comercio:</strong> <%= business.business_name %></p>
                <% } else { %>
                    <p>Comercio no encontrado</p>
                <% } %>
                <p><strong>Subtotal:</strong> $<%= cart.total %></p>
                <p><strong>ITBIS (<%= taxRate %>%):</strong> $<%= (cart.total * taxRate / 100).toFixed(2) %></p>
                <p><strong>Total:</strong> $<%= (cart.total * (1 + taxRate / 100)).toFixed(2) %></p>
            </div>

            <button type="submit">Confirmar Pedido</button>
        </form>
    </div>
</body>
</html>