<!-- views/clienteViews/comercio.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Comercio</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenedor principal */
        .container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1.5rem;
        }

        .business-details {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .business-details img {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            margin-bottom: 1rem;
            object-fit: cover;
        }

        .business-details span {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 1rem;
        }

        .business-details p {
            font-size: 1rem;
            color: #666;
            text-align: center;
            margin-bottom: 1rem;
        }

        .favorite-button {
            padding: 0.5rem 1rem;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 1rem;
        }

        .favorite-button:hover {
            background-color: #2980b9;
        }

        .back-button {
            display: block;
            margin: 1.5rem auto;
            padding: 0.5rem 1rem;
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }

        .back-button:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/perfil">Mi perfil</a></li>
            <li><a href="/user/pedidos">Mis pedidos</a></li>
            <li><a href="/user/direcciones">Mis direcciones</a></li>
            <li><a href="/user/favoritos">Mis favoritos</a></li>
            <li><a href="/user/logout">Cerrar sesión</a></li>
        </ul>
    </nav>
    
    <div class="container">
        <h2>Detalles del Comercio</h2>
        <div class="business-details">
            <img src="<%= business.logo %>" alt="Logo">
            <span><%= business.business_name %></span>
            <p>Teléfono: <%= business.phone %></p>
            <p>Email: <%= business.email %></p>
            <p>Horario: <%= business.opening_time %> - <%= business.closing_time %></p>
            
            <% if (isFavorite) { %>
                <form action="/favorites/eliminar" method="POST">
                    <input type="hidden" name="business_id" value="<%= business.id %>">
                    <button type="submit" class="favorite-button">Eliminar Favorito</button>
                </form>
            <% } else { %>
                <form action="/favorites/marcar" method="POST">
                    <input type="hidden" name="business_id" value="<%= business.id %>">
                    <button type="submit" class="favorite-button">Marcar como Favorito</button>
                </form>
            <% } %>
        </div>
        <a href="/user/comercios/<%= business.business_type_id %>" class="back-button">Volver</a>
    </div>
</body>
</html>