<!-- FILE: detallePedido.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del Pedido</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenedor principal */
        .detail-container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .detail-container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1.5rem;
        }

        /* Información del pedido */
        .order-info {
            margin-bottom: 2rem;
        }

        .order-info p {
            margin: 0.5rem 0;
            font-size: 1rem;
            color: #333;
        }

        .products {
            margin-bottom: 1.5rem;
        }

        .product {
            display: flex;
            align-items: center;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 1rem;
            background: #fff;
        }

        .product img {
            width: 50px;
            height: 50px;
            border-radius: 8px;
            margin-right: 1rem;
            object-fit: cover;
        }

        .product-info {
            flex-grow: 1;
        }

        .product-info p {
            margin: 5px 0;
        }

        .total {
            text-align: right;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .back-button {
            display: block;
            margin-top: 1rem;
            padding: 0.5rem 1rem;
            background-color: #007BFF;
            color: white;
            text-align: center;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

        .back-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/perfil">Mi perfil</a></li>
            <li><a href="/user/pedidos">Mis pedidos</a></li>
            <li><a href="/user/direcciones">Mis direcciones</a></li>
            <li><a href="/user/favoritos">Mis favoritos</a></li>
            <li><a href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
    </nav>

    <div class="detail-container">
        <h2>Detalle del Pedido</h2>
        <div class="order-info">
            <p><strong>Comercio:</strong> <%= order.business.business_name %></p>
            <p><strong>Estado:</strong> <%= order.status %></p>
            <p><strong>Fecha:</strong> <%= new Date(order.createdAt).toLocaleDateString() %> <strong>Hora:</strong> <%= new Date(order.createdAt).toLocaleTimeString() %></p>
            <p><strong>Total:</strong> $<%= order.total %></p>
            <p><strong>Dirección de entrega:</strong> <%= order.address.description %></p>
        </div>
        <div class="products">
            <h3>Productos</h3>
            <table>
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.orderDetails.forEach(item => { %> <!-- Cambiado de OrderItems a orderDetails -->
                        <tr>
                            <td>
                                <% if (item.product.image) { %>
                                    <img src="/ImagesRepo/<%= item.product.image %>" alt="<%= item.product.name %>" class="product-image">
                                <% } else { %>
                                    <img src="/images/no-image.png" alt="Sin imagen" class="product-image">
                                <% } %>
                            </td>
                            <td><%= item.product.name %></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="total">Total: $<%= parseFloat(order.total).toFixed(2) %></div>
        <a href="/user/pedidos" class="back-button">Volver a Mis Pedidos</a>
    </div>
</body>
</html>