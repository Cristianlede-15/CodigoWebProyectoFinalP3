<!-- views/clienteViews/editarDireccion.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Dirección</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos similares a agregarDireccion.ejs */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .address-form-container {
            max-width: 600px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .address-form-container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1.5rem;
        }

        .address-form-container form {
            display: flex;
            flex-direction: column;
        }

        .address-form-container label {
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .address-form-container input, .address-form-container textarea {
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .address-form-container button {
            padding: 0.7rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .address-form-container button:hover {
            background-color: #0056b3;
        }

        .back-link {
            text-align: center;
            margin-top: 1rem;
        }

        .back-link a {
            color: #3498db;
            text-decoration: none;
        }

        .back-link a:hover {
            text-decoration: underline;
        }

        /* Estilos para los mensajes */
        .alert {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 4px;
            text-align: center;
        }
        .alert.error {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/perfil">Mi perfil</a></li>
            <li><a href="/user/pedidos">Mis pedidos</a></li>
            <li><a href="/user/direcciones">Mis direcciones</a></li>
            <li><a href="/user/favoritos">Mis favoritos</a></li>
            <li><a href="/user/logout">Cerrar sesión</a></li>
        </ul>
    </nav>
    
    <div class="address-form-container">
        <h2>Editar Dirección</h2>

        <form action="/user/direcciones/editar/<%= address.id %>" method="POST">
            <label for="name">Nombre de la Dirección</label>
            <input type="text" id="name" name="name" value="<%= address.name %>" required>

            <label for="description">Dirección Completa</label>
            <textarea id="description" name="description" rows="3" required><%= address.description %></textarea>

            <button type="submit">Actualizar Dirección</button>
        </form>
        <div class="back-link">
            <a href="/user/direcciones">Volver a Mis Direcciones</a>
        </div>
    </div>
</body>
</html>