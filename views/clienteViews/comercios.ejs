<!-- views/clienteViews/comercios.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comercios</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenedor principal */
        .container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1.5rem;
        }

        /* Formulario de búsqueda */
        .search-form {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .search-form input[type="text"] {
            padding: 0.5rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 0.5rem;
        }

        .search-form button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .search-form button:hover {
            background-color: #0056b3;
        }

        /* Texto de cantidad de comercios */
        .business-count {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 1.2rem;
            color: #666;
        }

        /* Comercios */
        .business {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 1rem;
            background-color: #f9f9f9;
        }

        .business:hover {
            background-color: #f1f1f1;
        }

        .business img {
            width: 50px;
            height: 50px;
            border-radius: 4px;
            margin-right: 1rem;
        }

        .business span {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .business button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .business button:hover {
            background-color: #0056b3;
        }

        /* Botón para volver atrás */
        .back-button {
            display: block;
            margin: 2rem auto;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

        .back-button:hover {
            background-color: #0056b3;
        }

        /* Mensaje vacío */
        .container p {
            text-align: center;
            color: #666;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/user/home">Home</a></li>
            <li><a href="/user/perfil">Mi perfil</a></li>
            <li><a href="/user/pedidos">Mis pedidos</a></li>
            <li><a href="/user/direcciones">Mis direcciones</a></li>
            <li><a href="/user/favoritos">Mis favoritos</a></li>
            <li><a href="/user/logout">Cerrar sesión</a></li>
        </ul>
    </nav>
    
    <div class="container">
        <h2>Comercios</h2>
        <form class="search-form" action="/user/comercios/<%= typeId %>/buscar" method="GET">
            <input type="text" name="nombre" placeholder="Buscar comercio por nombre">
            <button type="submit">Buscar</button>
        </form>
        <div class="business-count">
            <p>Hay <%= businesses.length %> comercios de este tipo.</p>
        </div>
        <% if (businesses.length > 0) { %>
            <% businesses.forEach(function(business) { %>
                <div class="business">
                    <div>
                        <a href="/user/comercio/<%= business.id %>">
                            <img src="/ImagesRepo/<%= business.logo %>" alt="Logo">
                            <span><%= business.business_name %></span>
                        </a>
                    </div>
                    
                    <% if (favoriteBusinessIds.includes(business.id)) { %>
                        <!-- Si es favorito, mostrar botón para eliminar de favoritos -->
                        <form action="/favorites/eliminar" method="POST">
                            <input type="hidden" name="business_id" value="<%= business.id %>">
                            <button type="submit" class="favorite-button">Eliminar Favorito</button>
                        </form>
                    <% } else { %>
                        <!-- Si no es favorito, mostrar botón para agregar a favoritos -->
                        <form action="/favorites/marcar" method="POST">
                            <input type="hidden" name="business_id" value="<%= business.id %>">
                            <button type="submit" class="favorite-button">Marcar como Favorito</button>
                        </form>
                    <% } %>
                </div>
            <% }); %>
        <% } else { %>
            <p>No hay comercios disponibles en este momento.</p>
        <% } %>
        <a href="/user/home" class="back-button">Volver</a>
    </div>
</body>
</html>