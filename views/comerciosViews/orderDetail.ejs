<!-- views/orderDetail.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle del Pedido</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenedor principal */
        .container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1.5rem;
        }

        /* Detalles del pedido */
        .order-detail {
            margin-bottom: 1.5rem;
        }

        .order-detail p {
            margin: 5px 0;
        }

        /* Productos del pedido */
        .products {
            margin-top: 1rem;
        }

        .product {
            display: flex;
            align-items: center;
            padding: 0.5rem 0;
            border-bottom: 1px solid #ddd;
        }

        .product img {
            width: 50px;
            height: 50px;
            border-radius: 4px;
            margin-right: 1rem;
            object-fit: cover;
        }

        .product-info {
            flex-grow: 1;
        }

        /* Botón para asignar delivery */
        .assign-delivery {
            display: block;
            width: 100%;
            padding: 0.75rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-top: 1rem;
        }

        .assign-delivery:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/business/home">Home</a></li>
            <li><a href="/business/perfil">Perfil</a></li>
            <li><a href="/business/categorias">Mantenimiento de categorías</a></li>
            <li><a href="/business/productos">Mantenimiento de productos</a></li>
            <li><a href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
    </nav>
    
    <div class="container">
        <h2>Detalle del Pedido</h2>
        <div class="order-detail">
            <p>Nombre del Comercio: <%= order.businessName %></p>
            <p>Estado: <%= order.status %></p>
            <p>Fecha y Hora: <%= order.createdAt.toLocaleString() %></p>
            <p>Total: $<%= order.total %></p>
        </div>

        <div class="products">
            <h3>Productos</h3>
            <% order.products.forEach(product => { %>
            <div class="product">
                <img src="/ImagesRepo/<%= product.image %>" alt="<%= product.name %>">
                <div class="product-info">
                    <p>Nombre: <%= product.name %></p>
                    <p>Precio: $<%= product.price %></p>
                </div>
            </div>
            <% }) %>
        </div>

        <% if(order.status === 'pendiente') { %>
            <form action="/business/orders/<%= order.id %>/assign-delivery" method="POST">
                <button type="submit" class="assign-delivery">Asignar Delivery</button>
            </form>
        <% } %>
    </div>
</body>
</html>