<!-- views/comerciosViews/perfil.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil del Comercio</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Reset básico */
        body, ul, li {
            margin: 0;
            padding: 0;
            list-style: none;
            font-family: 'Roboto', sans-serif;
        }

        /* Estilos de la página */
        body {
            background-color: #ecf0f1;
        }

        .navbar {
            z-index: 10;
            position: relative;
        }

        .navbar-menu {
            display: flex;
            gap: 1rem;
            padding: 1rem;
            background-color: #2c3e50;
        }

        .navbar-menu li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .profile-container {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            text-align: center;
            margin: 5rem auto; /* Margen superior para no sobreponerse con el navbar */
        }

        .profile-container h2 {
            margin-bottom: 2rem;
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            color: #2c3e50;
        }

        .profile-container input {
            width: 80%;
            padding: 0.8rem;
            margin: 0.5rem 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .profile-container button {
            width: 100%;
            padding: 0.8rem;
            background-color: #16a085;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 1rem;
            transition: background-color 0.3s ease;
            font-size: 1rem;
        }

        .profile-container button:hover {
            background-color: #149174;
        }

        .profile-container .back-button {
            background-color: #3498db;
        }

        .profile-container .back-button:hover {
            background-color: #2980b9;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/business/home">Home</a></li>
            <li><a href="/business/perfil">Perfil</a></li>
            <li><a href="/business/categorias">Mantenimiento de categorías</a></li>
            <li><a href="/business/productos">Mantenimiento de productos</a></li>
            <li><a href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
    </nav>
    <div class="profile-container">
        <h2>Perfil del Comercio</h2>
        <form action="/business/perfil" method="POST" enctype="multipart/form-data">
            <input type="text" name="business_name" placeholder="Nombre del comercio" value="<%= user.business_name %>" required>
            <input type="text" name="address" placeholder="Dirección" value="<%= user.address %>" required>
            <input type="tel" name="phone" placeholder="Teléfono" value="<%= user.phone %>" required>
            <input type="email" name="email" placeholder="Email" value="<%= user.email %>" required>
            <input type="file" name="logo" accept="image/*">
            <input type="time" name="opening_time" placeholder="Hora de apertura" value="<%= user.opening_time %>" required>
            <input type="time" name="closing_time" placeholder="Hora de cierre" value="<%= user.closing_time %>" required>
            <button type="submit">Guardar cambios</button>
            <button type="button" class="back-button" onclick="window.location.href='/business/home'">Volver al Home</button>
        </form>
    </div>
</body>
</html>