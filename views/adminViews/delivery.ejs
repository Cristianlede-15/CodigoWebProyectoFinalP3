<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deliveries</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <style>
        /* Reset básico */
        body, ul, li {
            margin: 0;
            padding: 0;
            list-style: none;
            font-family: 'Roboto', sans-serif;
        }

        /* Estilos de la página */
        body {
            background-color: #ecf0f1;
            padding: 2rem;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 2rem;
            font-family: 'Montserrat', sans-serif;
            font-size: 2.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 2rem 0;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #2c3e50;
            color: white;
            font-family: 'Roboto', sans-serif;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            color: #666;
        }

        button {
            padding: 0.5rem 1rem;
            color: white;
            background-color: #2c3e50;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #16a085;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/admin/dashboard">Home</a></li>
            <li><a href="/admin/clientes">Clientes</a></li>
            <li><a href="/admin/delivery">Deliveries</a></li>
            <li><a href="/admin/comercios">Comercios</a></li>
            <li><a href="/admin/configuracion">Configuración</a></li>
            <li><a href="/admin/administradores">Administradores</a></li>
            <li><a href="/admin/tipos_comercios">Tipos de Comercios</a></li>
            <li><a href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
    </nav>
    <h1>Deliveries</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cantidad de Pedidos</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (deliveries && deliveries.length > 0) { %>
                <% deliveries.forEach(delivery => { %>
                    <tr>
                        <td><%= delivery.first_name %></td>
                        <td><%= delivery.last_name %></td>
                        <td><%= delivery.orderCount %></td>
                        <td><%= delivery.phone %></td>
                        <td><%= delivery.email %></td>
                        <td>
                            <% if (delivery.is_active) { %>
                                <form action="/admin/delivery/<%= delivery.id %>/toggle" method="POST" style="display:inline;">
                                    <button type="submit">Inactivar</button>
                                </form>
                            <% } else { %>
                                <form action="/admin/delivery/<%= delivery.id %>/toggle" method="POST" style="display:inline;">
                                    <button type="submit">Activar</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6">No hay deliveries disponibles.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
