        </ul>
    </nav>
    <div class="container mt-5">
        <h1 class="text-center">Configuración General</h1>
        <div class="config-container text-center">
            <% if (configuracion && configuracion.tax_rate !== undefined) { %>
                <h2>ITBIS: <%= configuracion.tax_rate %>%</h2>
            <% } else { %>
                <h2>ITBIS: No disponible</h2>
            <% } %>
            <a href="/admin/configuracion/editar" class="btn btn-primary mt-3"><i class="fas fa-edit"></i> Editar Configuración</a>
        </div>
    </div>
</body>
</html>