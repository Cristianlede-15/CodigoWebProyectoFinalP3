<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tipos de Comercios</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/adminViews.css">
</head>
<body>
    <nav class="navbar">
        <ul class="navbar-menu">
            <li><a href="/admin/dashboard">Home</a></li>
            <li><a href="/admin/clientes">Clientes</a></li>
            <li><a href="/admin/delivery">Deliveries</a></li>
            <li><a href="/admin/comercios">Comercios</a></li>
            <li><a href="/admin/configuracion">Configuración</a></li>
            <li><a href="/admin/administradores">Administradores</a></li>
            <li><a href="/admin/tipos_comercios">Tipos de Comercios</a></li>
            <li><a href="/auth/logout">Cerrar Sesión</a></li>
        </ul>
    </nav>
    <h1 class="text-center">Listado de Tipos de Comercios</h1>
    <div class="container mt-5">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre del Tipo</th>
                    <th>Ícono</th>
                    <th>Descripción</th>
                    <th>Cantidad de Comercios</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% tiposComercios.forEach(tipo => { %>
                    <tr>
                        <td><%= tipo.name %></td>
                        <td><img src="<%= tipo.icon %>" alt="<%= tipo.name %>" style="width: 32px; height: 32px;"></td>
                        <td><%= tipo.description %></td>
                        <td><%= tipo.comercios ? tipo.comercios.length : 0 %></td>
                        <td>
                            <div class="btn-action">
                                <a href="/admin/tipos_comercios/editar/<%= tipo.id %>" class="btn btn-info"><i class="fas fa-edit"></i> Editar</a>
                                <form action="/admin/tipos_comercios/eliminar/<%= tipo.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este tipo de comercio?');"><i class="fas fa-trash-alt"></i> Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <button onclick="window.location.href='/admin/tipos_comercios/nuevo'" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Tipo de Comercio</button>
    </div>
</body>
</html>