<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Comercio</title>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>
    <div class="register-container" role="main">
        <h2>Registrar Comercio</h2>
        <form aria-label="Formulario de registro de comercio" method="POST" action="/auth/registerBusiness" enctype="multipart/form-data">
            <label for="business_name">Nombre del Comercio</label>
            <input type="text" id="business_name" name="business_name" placeholder="Nombre del Comercio" required>

            <label for="phone">Teléfono</label>
            <input type="text" id="phone" name="phone" placeholder="Teléfono" required>

            <label for="email">Correo Electrónico</label>
            <input type="email" id="email" name="email" placeholder="Correo Electrónico" required>

            <label for="logo">Logo del Comercio</label>
            <input type="file" id="logo" name="logo" accept="image/*" required>

            <label for="opening_time">Hora de Apertura</label>
            <input type="time" id="opening_time" name="opening_time" required>

            <label for="closing_time">Hora de Cierre</label>
            <input type="time" id="closing_time" name="closing_time" required>

            <label for="business_type">Tipo de Comercio</label>
            <select id="business_type" name="business_type" required>
                <% tiposComercios.forEach(tipo => { %>
                    <option value="<%= tipo.id %>"><%= tipo.name %></option>
                <% }); %>
            </select>

            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Contraseña" required>

            <label for="confirm_password">Confirmar Contraseña</label>
            <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirmar Contraseña" required>

            <button type="submit">Registrar Comercio</button>
        </form>
        <a href="/auth/login">Volver al inicio de sesión</a>
    </div>
</body>
</html>