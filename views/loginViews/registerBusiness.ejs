<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Comercio</title>
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
    .register-wrapper {
        min-height: 100vh;
    }

    .logo-container {
        background-color: #f8f9fa;
    }

    .logo {
        max-width: 80%;
        height: auto;
    }

    .form-container {
        background-color: #ffffff;
    }
</style>

<body>
    <div class="register-wrapper d-flex">
        <div class="logo-container w-50 d-flex align-items-center justify-content-center">
            <img src="/img/demostracion-en-la-tienda.png" alt="Logo del Comercio" class="img-fluid logo">
        </div>
        <div class="form-container w-50 p-4">
            <h2 class="text-center mb-4">Registrar Comercio</h2>
            <form aria-label="Formulario de registro de comercio" method="POST" action="/auth/registerBusiness"
                enctype="multipart/form-data">
                <div class="form-group">
                    <label for="business_name">Nombre del Comercio</label>
                    <input type="text" id="business_name" name="business_name" class="form-control"
                        placeholder="Nombre del Comercio" required>
                </div>

                <div class="form-group">
                    <label for="phone">Teléfono</label>
                    <input type="text" id="phone" name="phone" class="form-control" placeholder="Teléfono" required>
                </div>

                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Correo Electrónico"
                        required>
                </div>

                <div class="form-group">
                    <label for="logo">Logo del Comercio</label>
                    <input type="file" id="logo" name="logo" class="form-control-file" accept="image/*" required>
                </div>

                <div class="form-group">
                    <label for="opening_time">Hora de Apertura</label>
                    <input type="time" id="opening_time" name="opening_time" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="closing_time">Hora de Cierre</label>
                    <input type="time" id="closing_time" name="closing_time" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="business_type">Tipo de Comercio</label>
                    <select id="business_type" name="business_type" class="form-control" required>
                        <% tiposComercios.forEach(tipo=> { %>
                            <option value="<%= tipo.id %>">
                                <%= tipo.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña"
                        required>
                </div>

                <div class="form-group">
                    <label for="confirm_password">Confirmar Contraseña</label>
                    <input type="password" id="confirm_password" name="confirm_password" class="form-control"
                        placeholder="Confirmar Contraseña" required>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Registrar Comercio</button>
            </form>
            <div class="text-center mt-3">
                <a href="/auth/login">Volver al inicio de sesión</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>